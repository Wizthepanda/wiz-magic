rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for leaderboard and content
    match /leaderboard/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Video content and XP tracking
    match /videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // XP transactions
    match /xp_transactions/{transactionId} {
      allow read: if request.auth != null;
      // Use request.resource for creates/updates (resource is undefined on create)
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Engagement events collection used by app (YouTube actions)
    match /engagements/{engagementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Detailed video view records used by app
    match /video_views/{viewId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Video engagements collection
    match /video_engagements/{engagementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
